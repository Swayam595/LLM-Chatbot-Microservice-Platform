# Base image
FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# Install Poetry
RUN pip install --upgrade pip && pip install poetry

# Set work directory
WORKDIR /app

# Copy pyproject and shared dependencies
COPY ./services/conversation_service/pyproject.toml ./services/conversation_service/poetry.lock* /app/
COPY ./shared /shared/

# Install shared dependencies first
RUN poetry config virtualenvs.create false \
    && cd /shared && poetry install --no-interaction --no-ansi

# Install service dependencies
RUN cd /app && poetry install --no-interaction --no-ansi --no-root

# Copy service code
COPY ./services/conversation_service/app /app/app
COPY ./services/conversation_service/config.py /app/

# Copy .env file
COPY ./services/conversation_service/.env /app/.env

# Expose port
EXPOSE 8003

# Run server
CMD ["poetry", "run", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8003"]
